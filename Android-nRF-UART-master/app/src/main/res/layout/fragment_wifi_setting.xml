<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="WIFI SETTING"/>-->
    <Button
        android:visibility="gone"
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"/>
    <ListView
        android:visibility="gone"
        android:id="@+id/list_wifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"/>
    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:text="12"
        android:textSize="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="-100dp"/>

    <TimePicker
        android:headerBackground="#00ffffff"
        android:id="@+id/timePicker"
        android:timePickerMode="clock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnBackWifi"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/upload_icon"
                android:scaleType="fitCenter"
                android:background="@drawable/button_fragment_background"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:visibility="invisible"
                android:id="@+id/btnRefreshWifi"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/refresh_icon"
                android:background="@drawable/button_fragment_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnNextWifi"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/download_icon"
                android:scaleType="fitCenter"
                android:background="@drawable/button_fragment_background"/>

        </LinearLayout>




    </LinearLayout>
</LinearLayout>
